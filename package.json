{
  "name": "my-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4400",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint ngx-spider-chart",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clear_jest": "npx jest --clearCache",
    "build_lib": "ng build ngx-spider-chart --configuration production",
    "build_lib:watch": "ng build ngx-spider-chart --watch",
    "npm_pack": "cd dist/ngx-spider-chart && npm pack",
    "npm_pub": "cd dist/ngx-spider-chart && npm publish",
    "package": "npm run build_lib && npm run npm_pack",
    "bump_version": "node scripts/increment-version.js -v patch",
    "bump": "cd projects/ngx-spider-chart && npm version patch",
    "husky:prepare": "husky install",
    "prepare": "is-ci || npm run husky:prepare",
    "format": "npx prettier --write ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.3.12",
